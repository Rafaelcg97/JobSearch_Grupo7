@{
    var base64_2 = Convert.ToBase64String((ViewData["bannerImage"] as byte[])!);
    var bannerSrc = String.Format("data:image/gif;base64,{0}", base64_2);

    var bannerText = Convert.ToString(ViewData["bannerText"]);
}
<!--Body-->
<section>
    <div class="container ">
        <div class="d-sm-flex">
            <div class="row p-3">
                <div class="col-5 mt-2">
                    <img class="forma img-fluid d-none d-sm-block" src="@bannerSrc" />
                </div>
                <div class="col-6 mt-5 p-3 text-center">
                    <h1><b>¿Quiénes somos?</b></h1> <br>
                    <h5 class="mt-2">@bannerText</h5>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div id="carouselExampleControls" class="carousel slide col-5" data-bs-ride="carousel">
                <div class=" p-3 text-center">
                    <h1><b>Empresas</b></h1>
                </div>
                <div class="carousel-inner">
                    @{
                        int i = 0;
                    }
                    @foreach (var item in (IEnumerable<dynamic>) (ViewData["companyPictures"])!)
                    {
                        var base64Image = Convert.ToBase64String((item as byte[])!);
                        var PictureSrc = String.Format("data:image/gif;base64,{0}", base64Image);

                        if (i == 0)
                        {
                            <div class=" carousel-item active">
                                <img src=@PictureSrc class="d-block car" alt="...">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@PictureSrc class="d-block car" alt="...">
                            </div>
                        }

                        i++;
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next dark" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="col-5 m-5">
                <div class="container text-center">
                    <div class="row m-3">
                        <div class="col ct1">
                            <h5><b>Usuarios activos <br> @ViewData["countEmployees"]</b></h5>
                        </div>
                        <div class="col ct2">
                            <h5><b>Empresas<br>@ViewData["countCompanies"] </b></h5>
                        </div>
                    </div>

                    <div class="row m-3">
                        <div class="col ct2">
                            <h5><b>Aplicaciones<br> @ViewData["countApplications"]</b></h5>
                        </div>
                        <div class="col ct1">
                            <h5><b>Plazas activas<br>@ViewData["countJobs"]</b></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


